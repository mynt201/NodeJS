                    "name": "Register User",
                    "event": [{
                        "listen": "test",
                        "script": {
                            "exec": [
                                "if (pm.response.code === 201) {",
                                "    var jsonData = pm.response.json();",
                                "    if (jsonData.token) {",
                                "        pm.environment.set(\"token\", jsonData.token);",
                                "        console.log(\"Token saved to environment\");",
                                "    }",
                                "}"
                            ],
                            "type": "text/javascript"
                        }
                    }],
                    "request": {
                        "method": "POST",
                        "header": [{
                            "key": "Content-Type",
                            "value": "application/json"
                        }],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123456\",\n  \"fullName\": \"Test User\",\n  \"phone\": \"+84901234567\",\n  \"address\": \"123 Test Street, Ho Chi Minh City\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "register"
                            ]
                        },
                        "description": "Register a new user account"
                    },
